#!/usr/bin/env sh
#bootstrap - create account and such

case "$(uname -s)" in
Darwin)
    command -v brew >/dev/null 2>&1 || ruby -e "$(curl -fsSL \
        https://raw.githubusercontent.com/Homebrew/install/master/install)"
    ;;
Linux)
    sudo pacman -q --noconfirm -S --needed openssh alacritty-terminfo
    sudo cp base/sshd_config /etc/ssh/sshd_config
    sudo systemctl enable --now sshd
    sudo systemctl reload sshd
    sudo cp base/sudoers /etc/sudoers
    ;;
esac
